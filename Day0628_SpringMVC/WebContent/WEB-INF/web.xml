<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Day0628_SpringMVC</display-name>
 		<!-- dispatcher servlet 등록 -->
 	
 	
 	

	<!-- contextLoaderListener를 등록하면 어플리케이션이 로딩될 때ㅡ
	스프링 컨테이너를 하나 만든다. 이 스프링 컨테이너가 root-container
	스프링 설정파일의 기본 위치는 WEB-INF/applicationContext.xml
	
	 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
 	
 	
 	
 	<!-- The front controller of this Spring Web application, responsible for handling all application requests -->
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		
		<init-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		
		
	</servlet>
	
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	
	<!-- Dispatcher-servlet의 경우 spring container이다.
	:설정파일의 기본 위치는 WEB-INF/{servlet-name}-servlet.xml
	ex) 서블릿의 이름이 'dispatcher' 이면
	설정파일의 경로는 WEB-INF/dispatcher-servlet.xml
	 -->
	 
</web-app>