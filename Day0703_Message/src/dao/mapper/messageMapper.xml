<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.MessageDao">
	
   
   <insert id="insertMessage" parameterType="message">
      insert 
        into message
       values (message_seq.nextval,#{password},#{name},#{message})
   </insert>
   
   <delete id="deleteMessage" parameterType="int">
      delete 
        from message
       where id = #{id} 
   </delete>
   
   <select id="selectOne" parameterType="int" resultMap="messageMap">
      select * from message where id = #{id}   
   </select>

   <select id="selectAll" resultType="message">
      select * from message
   </select>
   
   <select id="selectCount" resultType="int">
   		select count(*) from message
   </select>
   
   
   <select id="selectList" resultType="message" parameterType="map">
   
      select * from (select rownum as rnum, m.id, m.password, m.name, m.message from (select id,password,name,message from message
       order by id desc) m ) where rnum between #{firstRow} and #{endRow}
       
   </select>
   
    <resultMap type="message" id="messageMap">
      <result property="id" column="id"/>
      <result property="password" column="password"/>
      <result property="name" column="name"/>
      <result property="message" column="message"/>
   </resultMap>
   
   
   
   
</mapper>